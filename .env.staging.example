# Staging Environment Configuration
# Copy this to .env.staging and fill in your values

# Domain Configuration
NEXT_PUBLIC_APP_URL=https://rein.truyens.pro
NEXT_PUBLIC_SITE_URL=https://rein.truyens.pro
NEXT_PUBLIC_BASE_URL=https://rein.truyens.pro

# Database (Staging - separate from production)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_staging_password_here
POSTGRES_DB=rein_staging
DATABASE_URL=postgresql://postgres:your_staging_password_here@postgres:5432/rein_staging

# Auth
BETTER_AUTH_SECRET=your_staging_secret_here
# Generate with: openssl rand -base64 32

# Admin (for staging setup)
ADMIN_EMAIL=admin@reinartdesign.be
ADMIN_PASSWORD=staging_admin_password
ADMIN_NAME=Staging_Admin

# Optional: Email/SMTP (can use test email for staging)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@rein.truyens.pro

# Let's Encrypt
LETSENCRYPT_EMAIL=your_email@example.com
LETSENCRYPT_DOMAIN=rein.truyens.pro

# Translate API
TRANSLATION_PROVIDER=deepl
DEEPL_API_KEY=example-key
