# Copy this file to .env.local and fill in your secrets
# This file should NOT be committed to git

# Database (automatically set by Docker Compose)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/nextjs_cms

# Better Auth Secret (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=39FxuaULrdkRaoRSRvNVR6HJPoVjls41uNwUnU7ry2M=

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3020

# Email Configuration (for contact form notifications)

# Translate API
TRANSLATION_PROVIDER=deepl
DEEPL_API_KEY=example-key


# Instagram API Configuration
INSTAGRAM_APP_ID=your_app_id
INSTAGRAM_APP_SECRET=your_app_secret
INSTAGRAM_ACCESS_TOKEN=your_access_token
INSTAGRAM_USER_ID=your_user_id

# Instagram Sync Settings
INSTAGRAM_SYNC_ENABLED=true
INSTAGRAM_SYNC_INTERVAL_HOURS=6
INSTAGRAM_AUTO_CREATE_PROJECTS=false  # Set to true to auto-create projects
INSTAGRAM_CRON_SECRET=your_random_secret_token_here

# System User ID (optional - will use first admin user if not set)
INSTAGRAM_SYSTEM_USER_ID=admin_user_id